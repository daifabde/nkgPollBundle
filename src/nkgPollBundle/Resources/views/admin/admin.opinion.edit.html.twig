{% extends 'nkgPollBundle::base.html.twig' %}
{% block body %}
<div class="container">
  <div class="row">
    <h1>Item</h1>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
    {% if isnew %}
      Nouvel item
    {% else %}
      Modifier un item
    {% endif %}
    </div>
    <div class="panel-body">
      {{ form_start(form) }}
          {{ form_errors(form) }}
          <div class="form-group">
              <label>Libellé</label>
              {{ form_widget(form.libelle,{'attr':{'class':'form-control input-lg'}}) }}
              {{ form_errors(form.libelle) }}
          </div>
          <div class="form-group">
              <label>Description</label>
              {{ form_widget(form.description,{'attr':{'class':'form-control input-lg'}}) }}
              {{ form_errors(form.description) }}
          </div>
          <div class="form-group">
              {{ form_widget(form.VALIDER,{'attr':{'class':' btn btn-warning btn-lg'}}) }}
              <a class="btn btn-default btn-lg" href="{{ path('_adminlist') }}">Retour à l'accueil</a>
          </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}
